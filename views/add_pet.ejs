  <div class="container">
    <h2>Add pet</h2>

    <form action="/add_pet" method="post">
      <div class="form-group">
        <label for="inputName">Pet name</label>
        <input type="text" class="form-control" id="inputName" name="inputName" placeholder="Charlie">
      </div>
      <div class="form-group">
        <label for="inputAnimalType">Animal Type</label>
        <input type="text" class="form-control" id="inputAnimalType" name="inputAnimalType" placeholder="Dog">
      </div>
      <div class="form-group">
        <label for="inputSpecialRequirement">Special Requirement</label>
        <input type="text" class="form-control" id="inputSpecialRequirement" name="inputSpecialRequirement" placeholder="Likes pork rib.">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

  <!-- JQuery, Popper, JS Plugins -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
