<!doctype html>
<html lang="en">

  <head>
    <meta charset="UTF-8">

    <link rel="canonical" href="https://getbootstrap.com/docs/4.5/examples/sign-in/">
    <!-- Bootstrap core CSS -->
    <link rel='stylesheet' href='/css/bootstrap.min.css' />

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>
    <!-- Custom styles for this template -->
    <link rel='stylesheet' href='/stylesheets/login.css' />
  </head>
  <body class="text-center"> 
      <form class="form-signin" action="/auth/login" method="post">
        <img class="mb-4 image" src="/images/logo.png" alt="" width="150" height="150">
        <h1 class="h3 mb-3 font-weight-normal">Log in</h1>
        <div class="login-bar shadow p-3 mb-5 bg-white rounded">
          <label for="text" class="sr-only">Username</label>
            <input type="text" id="username" class="form-control" placeholder="Username" name="username" required autofocus>
          <label for="inputPassword" class="sr-only">Password</label>
          <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
          
          <button class="btn btn-default btn-primary" type="submit">Enter</button>
        </div>

        <div class="shadow p-3 mb-5 bg-white rounded">
          <h6>New user? <a href="/auth/register">Register here.</a></h6>
        </div>
        <p class="mt-5 mb-3 text-muted">&copy; PCS 2020</p>
  </form>
</body>
</html>